<Page
    x:Class="BiliMusic.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BiliMusic.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:converts="using:BiliMusic.Converters"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <converts:HomeItemDataTemplateSelector x:Name="homeItemDataTemplateSelector" x:Key="homeItemDataTemplateSelector"></converts:HomeItemDataTemplateSelector>
        <converts:HomeItemStyleSelector  x:Key="homeItemStyleSelector"></converts:HomeItemStyleSelector>
        <DataTemplate x:Key="Recommend">
            <StackPanel Margin="0 8 0 0" >
                <Grid Margin="0 0 0 8">
                    <TextBlock Text="{Binding title}"></TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Foreground="{StaticResource COLOR_Main}" Style="{StaticResource TextButton}" HorizontalAlignment="Right" >
                            <StackPanel Orientation="Horizontal">
                                <FontIcon Margin="0 2 0 -2" FontFamily="{StaticResource FONTS_MaterialIcons}" VerticalAlignment="Center"  Glyph="{StaticResource ICON_PlaylistPlay}"></FontIcon>
                                <TextBlock Margin="4 0 0 0">播放全部</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Margin="16 0 0 0" Style="{StaticResource TextButton}" HorizontalAlignment="Right" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0 0 4 0">查看更多</TextBlock>

                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
                <controls:AdaptiveGridView 
                                   ItemsSource="{Binding songs}"
                                   OneRowModeEnabled="False"
                                   DesiredWidth="300"
                                   SelectionMode="None"
                                   Padding="0"
                                   IsItemClickEnabled="True">
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <controls:ImageEx 
                        Width="48"
                        Height="48"
                        Source="{Binding cover_url}"
                        Style="{StaticResource ImageExBaseStyle}" />
                                <StackPanel Grid.Column="1" Margin="8 0 0 0" VerticalAlignment="Center">
                                    <TextBlock  Margin="0 4" TextTrimming="CharacterEllipsis" Text="{Binding title}"></TextBlock>
                                    <TextBlock Text="{Binding author}" Margin="0 4" Foreground="Gray" FontSize="12"></TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                   
                   
                </controls:AdaptiveGridView>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="SongList">
            <StackPanel Margin="0 8 0 0">
                <Grid Margin="0 0 0 8">
                    <TextBlock Text="{Binding title}"></TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Foreground="{StaticResource COLOR_Main}" Visibility="{Binding hasRefresh}" Style="{StaticResource TextButton}" HorizontalAlignment="Right" >
                            <StackPanel Orientation="Horizontal">
                                <FontIcon  FontFamily="{StaticResource FONTS_MaterialIcons}" VerticalAlignment="Center"  Glyph="{StaticResource ICON_Refresh}"></FontIcon>
                                <TextBlock Margin="4 0 0 0">换一换</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Margin="16 0 0 0" Style="{StaticResource TextButton}" Visibility="{Binding hasMore}" HorizontalAlignment="Right" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0 0 4 0">查看更多</TextBlock>

                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <controls:AdaptiveGridView ItemsSource="{Binding menus}" DesiredWidth="180" SelectionMode="None" IsItemClickEnabled="True" Padding="0" >
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4" MaxWidth="180">
                                <Border CornerRadius="4">
                                    <Grid>
                                        <controls:ImageEx  MaxWidth="300" PlaceholderStretch="UniformToFill" Style="{StaticResource ImageExBaseStyle}" 
                                                  Source="{Binding coverUrl}" />
                                        <Border Background="Orange" Visibility="{Binding isVip}" VerticalAlignment="Top" CornerRadius="0 0 0 4" HorizontalAlignment="Right">
                                            <TextBlock Foreground="White" Margin="8 4" FontSize="12">付费</TextBlock>
                                        </Border>
                                        <Grid VerticalAlignment="Bottom" >
                                            <Grid.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#7F000000" Offset="1"/>
                                                    <GradientStop Color="#00000000" Offset="0"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>
                                            <StackPanel Orientation="Horizontal" Padding="8 4">

                                                <FontIcon  Foreground="White" FontSize="14"  VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" Glyph="&#xE7F6;"></FontIcon>
                                                <TextBlock Foreground="White"  FontSize="12" VerticalAlignment="Center" Margin="4 0 0 0" Text="{Binding Path=playNum,Converter={StaticResource numberToStringConvert}}"></TextBlock>
                                            </StackPanel>

                                        </Grid>
                                    </Grid>
                                </Border>

                                <StackPanel Margin="4">
                                    <TextBlock Height="44" FontSize="16" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxLines="2" Text="{Binding title}"></TextBlock>
                                    <TextBlock FontSize="12" Visibility="{Binding showName}" Foreground="Gray" Text="{Binding mbnames}"></TextBlock>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                  
                   
                </controls:AdaptiveGridView>
            </StackPanel>
        </DataTemplate>
     
        <DataTemplate x:Key="Videos">
            <StackPanel Margin="0 8 0 0" >
                <Grid Margin="0 0 0 8">
                    <TextBlock Text="{Binding title}"></TextBlock>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Foreground="{StaticResource COLOR_Main}" Visibility="{Binding hasRefresh}" Style="{StaticResource TextButton}" HorizontalAlignment="Right" >
                            <StackPanel Orientation="Horizontal">
                                <FontIcon  FontFamily="{StaticResource FONTS_MaterialIcons}" VerticalAlignment="Center"  Glyph="{StaticResource ICON_Refresh}"></FontIcon>
                                <TextBlock Margin="4 0 0 0">换一换</TextBlock>
                            </StackPanel>
                        </Button>
                        <Button Margin="16 0 0 0" Style="{StaticResource TextButton}" Visibility="{Binding hasMore}" HorizontalAlignment="Right" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="0 0 4 0">查看更多</TextBlock>

                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

                <controls:AdaptiveGridView DesiredWidth="256" ItemsSource="{Binding videos}" SelectionMode="None" IsItemClickEnabled="True" Padding="0" >
                    <controls:AdaptiveGridView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="4" MaxWidth="256">
                                <Border CornerRadius="4">
                                    <Grid>
                                        <controls:ImageEx Stretch="Fill"  PlaceholderStretch="UniformToFill" Style="{StaticResource ImageExBaseStyle}" 
                                                  Source="{Binding pic}" />

                                        <Grid VerticalAlignment="Bottom" >
                                            <Grid.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#7F000000" Offset="1"/>
                                                    <GradientStop Color="#00000000" Offset="0"/>
                                                </LinearGradientBrush>
                                            </Grid.Background>

                                            <StackPanel Orientation="Horizontal" Padding="8 4">
                                                <FontIcon  Foreground="White" FontSize="14"  VerticalAlignment="Center" FontFamily="{StaticResource FONTS_MaterialIcons}" Glyph="{StaticResource ICON_Play}"></FontIcon>
                                                <TextBlock Foreground="White"  FontSize="12" VerticalAlignment="Center" Margin="4 0 0 0" Text="{Binding Path=view,Converter={StaticResource numberToStringConvert}}"></TextBlock>
                                                <FontIcon  Foreground="White" FontSize="14" Margin="8 0 0 0" VerticalAlignment="Center" FontFamily="{StaticResource FONTS_MaterialIcons}" Glyph="{StaticResource ICON_Comment}"></FontIcon>
                                                <TextBlock Foreground="White"  FontSize="12" VerticalAlignment="Center" Margin="4 0 0 0" Text="{Binding Path=reply,Converter={StaticResource numberToStringConvert}}"></TextBlock>
                                            </StackPanel>
                                            <TextBlock HorizontalAlignment="Right" Foreground="White"  FontSize="12" VerticalAlignment="Center" Margin="4 0" Text="{Binding Path=duration,Converter={StaticResource durationToTimeConvert}}"></TextBlock>
                                        </Grid>
                                    </Grid>
                                </Border>

                                <StackPanel Margin="4">
                                    <TextBlock Height="44" FontSize="16" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" MaxLines="2" Text="{Binding title}"></TextBlock>

                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </controls:AdaptiveGridView.ItemTemplate>
                </controls:AdaptiveGridView>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <ScrollViewer Padding="8">
            <StackPanel MaxWidth="1024" HorizontalAlignment="Center">
                <controls:Carousel
                   MinHeight="10"
                   MaxHeight="160"
                   InvertPositive="true" ItemDepth="48"
                   ItemMargin="0" ItemRotationX="0"
                   ItemRotationY="0" ItemRotationZ="0"
                    SelectedIndex="0"
                    
                ItemsSource="{Binding banners}"
                   Orientation="Horizontal">
                    <controls:Carousel.ItemTemplate>
                        <DataTemplate>
                            <controls:ImageEx Tapped="Banner_Tapped" Source="{Binding bannerImgUrl}" Style="{StaticResource ImageExBaseStyle}" />
                        </DataTemplate>
                    </controls:Carousel.ItemTemplate>

                </controls:Carousel>
                <ItemsControl ItemsSource="{Binding modules}" ItemContainerStyleSelector="{StaticResource homeItemStyleSelector}" ItemTemplateSelector="{StaticResource ResourceKey=homeItemDataTemplateSelector}">
                    
                </ItemsControl>
                
            </StackPanel>
        </ScrollViewer>
        <ProgressRing x:Name="loading" Foreground="{StaticResource COLOR_Main}" IsActive="True" Width="56" Height="56"></ProgressRing>
    </Grid>
   

</Page>
